@model ICollection<Post>;
@{
    ViewData["Title"] = "Home Page";
}

<style>
        .thumb img{
        width: 30px;
        height: 30px;
        -o-object-fit: cover;
        object-fit: cover;
        overflow: hidden;
        border-radius: 50%;
    }
</style>

<div class="album py-5 bg-light">
        <div class="container">

          <div class="row">
              @foreach(Post post in Model){
            <div class="col-md-4">
              <div class="card mb-4 box-shadow">
                <img class="card-img-top" src="@post.ImgUrl" alt="Card image cap">
                <div class="card-body">
                    <div class="thumb">
                                <a asp-controller="Post" asp-action="Detail" asp-route-id="@post.Id">
                                    <img class="col-1 img-fluid" src="@post.account.ProfilImgURL">
                                </a>
                                <a asp-controller="Profile" asp-action="Details" asp-route-id="@post.account.Id">@post.account.ScreenName</a>
                    </div>
                    
                  <p class="card-text">@post.Caption</p>
                  <div class="d-flex justify-content-between align-items-center">
                    <div class="btn-group">
                      <button type="button" class="btn btn-sm btn-outline-secondary">Like</button>
                      <button type="button" class="btn btn-sm btn-outline-secondary">Comment</button>
                    </div>
                    <small class="text-muted">9 mins</small>
                  </div>
                  
                </div>
              </div>
            </div>
                }           
        </div>
      </div>
 </div>